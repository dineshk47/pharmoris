# Example environment variables used by the project.
# Copy this file to `.env` and fill in secrets before running.

# Application
APP_NAME=Pharmoris
ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Database (Postgres with asyncpg)
# Example: postgresql+asyncpg://user:pass@host:5432/dbname
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/pharmoris

# Redis (used as Celery broker & result backend)
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
WORKER_CONCURRENCY=2
EMBEDDING_BATCH_SIZE=10

# Embeddings provider
# If OPENAI_API_KEY is empty, the app uses a deterministic fallback (dev only)
OPENAI_API_KEY=
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536

# GDPR / Security
# HMAC key for hashing user IDs in audit logs (keep secret & rotate occasionally)
HMAC_KEY=replace_with_a_secure_random_key
API_KEY=replace_with_admin_api_key  # optional: used to protect admin endpoints

# Rate limiting & CORS
RATE_LIMIT=60              # requests per minute per IP (default)
ALLOWED_ORIGINS=*          # comma-separated list (or *)
